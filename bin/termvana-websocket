#!/usr/bin/env ruby

require 'termvana/websocket'

@daemon = Termvana::Websocket.spawn(
  :name => 'termvana-websocket',
  :path => '/tmp',
  :verbose => true,
  :logger => false
)

if ARGV.size == 0 && @daemon.running?
  @daemon.status
elsif ARGV.size == 0
  @daemon.start
else
  @daemon.send ARGV.first
end
